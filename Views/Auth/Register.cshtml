@using Talkify.DTOs.AuthDTOs
@model RegisterDTO

@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <link rel = "stylesheet" href = "~/css/Register.css" asp-append-version = "true" />
    <link rel = "stylesheet" href = "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href = "https://fonts.googleapis.com/css2?family=Gabarito:wght@400;500;600;700&display=swap" rel = "stylesheet">
}

<div class = "login-page">
    <div class = "login-container">
        <div class = "login-card">
            <div class = "login-header">
                <i class = "fas fa-user-plus"></i>
                <h2> Create Account </h2>
            </div>
            <form asp-action = "Register" method = "post">
                <div asp-validation-summary = "ModelOnly" class = "error-summary"></div>
                <div class = "form-group">
                    <label asp-for = "Username">
                        <i class = "fas fa-user"> </i> Username
                    </label>
                    <input asp-for = "Username" placeholder = "Choose username">
                    <span asp-validation-for = "Username" class = "field-error"></span>
                </div>
                <div class = "form-group">
                    <label asp-for = "Email">
                        <i class = "fas fa-envelope"></i> Email
                    </label>
                    <input asp-for = "Email" type = "email" placeholder = "Enter email">
                    <span asp-validation-for = "Email" class = "field-error"></span>
                </div>
                <div class = "form-group">
                    <label asp-for = "Password">
                        <i class = "fas fa-lock"></i> Password
                    </label>
                    <input asp-for = "Password" type = "password" placeholder = "Create password">
                    <span asp-validation-for = "Password" class = "field-error"></span>
                </div>
                <div class = "form-group">
                    <label asp-for = "ConfirmPassword">
                        <i class = "fas fa-lock"></i> Confirm Password
                    </label>
                    <input asp-for = "ConfirmPassword" type = "password" placeholder = "Confirm password">
                    <span asp-validation-for = "ConfirmPassword" class = "field-error"></span>
                </div>
                <div class = "form-actions">
                    <button type = "submit" class = "btn-login">
                        <i class = "fas fa-user-plus"></i> Register
                    </button>
                    <a asp-controller = "Home" asp-action = "Index" class = "btn-back">
                        <i class = "fas fa-arrow-left"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name = "_ValidationScriptsPartial" />
}